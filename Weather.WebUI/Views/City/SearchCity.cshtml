@model List<Weather.WebUI.Models.CityJsonViewModel>

@{
    ViewBag.Title = "Znalezione miasta";
}

@if(Model.Count() == 0)
{
    <h1 class="text-center"><span class="label label-danger">Nie znalezionio miast zawierających wyrażenia: "@ViewBag.SearchCity"</span></h1>
}
else
{
    <div class="list-group text-center">
        @foreach (var city in Model)
        {
            @Html.ActionLink($"{city.Name} [{city.Country}]", "AddNewCity", "City", new { name = city.Name, country = city.Country, id = city._Id }, new { @class = "list-group-item" });
        }
    </div>
}
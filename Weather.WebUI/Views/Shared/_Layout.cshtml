<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link href="@Url.Content("~/Content/jquery-ui-1.10.3.custom.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/prettify.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/prettify.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.0.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Highcharts-4.0.1/js/highcharts-all.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Highcharts-4.0.1/js/modules/funnel.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Highcharts-4.0.1/js/modules/solid-gauge.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Highcharts-4.0.1/js/modules/drilldown.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/core.js")" type="text/javascript"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="margin-bottom: 0px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Weather")">Pogoda</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @using (Html.BeginForm("SearchCity", "City", FormMethod.Post, new { @class = "navbar-form navbar-left" }))
                {
                    <input type="text" class="form-control" placeholder="Miasto do obserwacji" name="search">
                    <input type="submit" class="btn btn-default" value="Wyszukaj" />
                }
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["User"] != null)
                    {
                        <li class="navbar-right"><a href="@Url.Action("Logout", "User")">Wyloguj się</a></li>
                        <li class="navbar-right navbar-text">Zalogowany jako: <strong>@ViewBag.UserName</strong></li>

                    }
                    else
                    {
                        <li class="navbar-right"><a href="@Url.Action("SignUp", "User")">Zarejestruj się</a></li>
                        <li class="navbar-right"><a href="@Url.Action("Login", "User")">Zaloguj się</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <br />
    <div class="container">
        @RenderBody()
    </div>


    <div class="navbar navbar-inverse navbar-fixed-bottom text-center">
        <h4><span style="color: #f2f2f2;">Aplikacja testowa | Autor <strong>Janusz Marcinik</strong></span></h4>
    </div>

    <script>
        setInterval(function () { reloadPage() }, 600000);
        function reloadPage()
        {
            window.location = location.href
        }
    </script>
</body>
</html>